&pepcmini

! total number of particles
tnp = 10000

! number of time steps
nt = 20

! time step
dt = 1e-4

! turn data and domain output on/off
!particle_output = .true.
particle_output = .false.
domain_output = .false.

! turn particle filtering (leaving simulation box) on/off 
particle_filter = .false.

! set fraction of particle to be tested in a direct summation
particle_direct = 0.01

/

&calc_force_coulomb
! 3D coulomb
force_law  = 3
! BH-mac
mac_select = 0
! theta = 0.0
theta2     = 0.09
! eps squared
eps2 = 1e-0
/

&libpepc
 debug_level = 2
 np_mult = -300

! Choose sorting routine and load balancing
! 0: no load balancing, 1: load balancing
 weighted = 1

! type of space-filling curve, 0=Z-curve, 1=Hilbert-curve
 curve_type = 1
/

&walk_para_smpss 

chunk_size_default = 21

/

&walk_para_pthreads
 num_walk_threads = 2
 max_particles_per_thread = 1000
/

