FILES_L   = pepc.f90

FILES_L_U = module_vtk_helpers.f90

CPPFLAGS += -I$(PETSC_DIR)/include -DBEM2D
LDFLAGS += -L$(PETSC_DIR)/lib -L/usr/X11/lib
LDLIBS += -lblas -llapack -lpetsc -lX11

SRC        += $(FILES_L)
SRC_COPY   += $(addprefix $(FRONTENDDIR)/$(FRONTEND)/, $(FILES_L))

SRC        += $(FILES_L_U)
SRC_COPY   += $(addprefix $(UTILSDIR)/, $(FILES_L_U))

# FIXME: walk_simple still has counters.
WALK = simple
BACKEND = log2d
BACKENDTYPE = XYZQVM
