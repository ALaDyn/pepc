FILES_L   = pepc.f90               \
            module_helper.f90      \
            module_units.f90       \
            module_integrator.f90  \
            module_globals.f90     \
            module_diagnostics.f90 \
            pfm_helper.f90         \
            pfm_encap.f90          \
            pfm_transfer.f90       \
            pfm_feval.f90
            

FILES_L_U = module_vtk_helpers.f90 module_vtk.f90
            

SRC        += $(FILES_L)
SRC_COPY   += $(addprefix $(FRONTENDDIR)/pepc-a-pfasst/, $(FILES_L))

SRC        += $(FILES_L_U)
