&pepc2dd

! total number of particles
tnp = 80000

! Ratio of the number of real particles and simulated particles 
we = 1.0

! number of particles per direction

nppd = 500 500 1

! number of species - max 2
nsp = 1

! number of time steps
nt = 5000


!! integration scheme

!ischeme = "leapfrog"
!ischeme = "crank-nicholson"
!ischeme = "relativistic_crank-nicholson"
!ischeme = "midpoint_picard"
!ischeme = "midpoint_picard_electrostatic"
ischeme = "trapezoidal_picard"
!ischeme = "trapezoidal_broyden"
!ischeme = "hamiltonian_boris"

!! Relativistic/classic time integrator - for postprocessing energy summation

flag_classic = .false.

! time step - Define a percentage of the plasma period, the inverse of plasma frequency
dt = 1.0e-3

! Restart 2D             = 1
! 1D-2D-3D thermal       = 2
! 2D3V thermal           = 3
! Landau-Damping         = 4
! Langmuir waves         = 5
! Beam -x dir            = 6
! Beam - uniform disk    = 7
! Weibul instability     = 8
! Solenoid y-axes        = 9
! Solenoid inf z-axes    = 10
! Weibul at equilibrium  = 11
! plasma at equilibrium  = 12

initial_setup = 8
ivdim         = 3

!! name folder

folder = "weibel/"


!! Normalization - Equation  - Default is CGS System
!   normal = 0   - 2D PIC Normalization - x0 = c/w     - v0 = c
!   normal = 1   - 2D PIC Normalization - x0 = lambdaD - v0 = vth
!   normal = 2   - 2D PEPC Normalization - Possible issues with Magneto-Darwin
!   normal = 3   - 2D CGS System
!   normal = 4   - 2D SI 

normal                  = 0


!!!! Input velocity is always a percentage of light of speed except for normal=1 !!!!!!!!

!! Electron Thermal Velocity

veth = 0.0 0.0 0.9165151    !veth=0.025 0.04 0.04      0.0 0.0   0.371390  0.916515139

!! Electron Drift Velocity

vedrift =  0.0 0.0 0.0


!! Ion Thermal Velocity

vith =  0.0 0.0 0.0   !vith=0.025 0.0 0.0

!! Ion Drift Velocity

vidrift =  0.0 0.0 0.0


!!! writing output

! woutput  = 1: 1D
! woutput  = 2: 2D
! woutput  = 3: 2D-3V
! woutput  = 4: 3D

woutput  = 3

! Particle Boundary Condition (true = periodic; false = open)
periodicity_particles = .false.

! diagnostics and output interval
diag_interval = 1
restart_file = "restart/restart_0_"
restart_step  = 2000

! turn data and domain output on/off
particle_output = .true.
domain_output = .true.

! turn direct summantion test on/off
particle_test = .true.

/

&field_grid_nml

! nx x ny grid points
n = 32 32 1

! shifted right by 50
offset = 0.0 0.0 0.0

! physical space spanned by the grid   !!12.5663706
extent = 12.8 12.8  0.0

/

&pepc_nml

! total number of particles
np = 0

! output particles every ... steps (no output if 0)
pdump = 0

! output fields every ... steps (no output if 0)
fdump = 10

! output checkpoints every ... steps (no output if 0)
cdump = 0

! periodicity
!mirror_box_layers = 10

!do_extrinsic_correction = .false.

! WM_BORIS_SDC   = 1
! WM_BORIS_MLSDC = 2
! WM_BORIS       = 3
! WM_BENEDIKT    = 4
!workingmode = 1

/


&calc_force
! 2D coulomb        = 2
! 3D coulomb        = 3
!   Lennard Jones   = 4
! 3D  kelbg         = 5
! 2d darwin model   = 6
! 2d3v darwin model = 7
! 3d darwin model   = 8

force_law  = 7

! BH-mac
mac_select = 0
! theta = 0.0 !0.36

theta2     = 0.36

! eps squared
eps2 = 1.0


!!1.0e-4  1.0 2.4e-6

include_far_field_if_periodic = .false.
/

&libpepc
 debug_level = 0
 np_mult = -50

! Choose sorting routine and load balancing
! 0: no load balancing, 1: load balancing
 weighted = 1

! periodicity
 mirror_box_layers = 1

! type of space-filling curve, 0=Z-curve, 1=Hilbert-curve
 curve_type = 1

