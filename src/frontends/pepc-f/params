&pepcf
! total number of palsma particles
tnpp = 100000

! number of time steps
nt = 1000

! time step
dt = 1e-12

! type of source distribution 0=Benjamin Berberich; 1=Emmert
quelltyp=0

! source temperature for electrons and ions in ev
ti_ev=80.0
te_ev=80.0

! density
ni=1e17
ne=1e17

! Magnetic Field (homogeneous)
Bx=2.0
By=0.0
Bz=0.0

! simulation domain length (multiples of the debye length)
! dx,dy,dz (lengths in m) can also be set. If done so (!=0), settings for delx,dely,delz are overridden
delx=80.
dely=2.2
delz=2.2
dx=0.0
dy=0.0
dz=0.0


! number of wall particles in y and z direction (this will give an arry of tnwpz*tnwpy wallparticles at x=delx*l_debye)
tnwpy=0
tnwpz=0
/


&calc_force_coulomb
! 3D coulomb
force_law  = 3
! BH-mac
mac_select = 0
! theta = 0.0
theta2     = 0.4
! eps squared
eps2 = 1e-16
/


&libpepc
 debug_level = 0
 np_mult = -50

! Choose sorting routine and load balancing
! 0: no load balancing, 1: load balancing
 weighted = 1

! type of space-filling curve, 0=Z-curve, 1=Hilbert-curve
 curve_type = 1
 
 interaction_list_length_factor = 8
/

&walk_para_smpss 

chunk_size_default = 21
/

&walk_para_pthreads
 num_walk_threads = 2
 max_particles_per_thread = 1000
/

