#
#  Makefile for pepc
#
.PHONY : lpepc pepcb pepce

all: lpepc pepcb ## pepce

lpepc:  
	cd lpepcsrc && gmake

pepcb: 
	cd lpepcsrc && gmake 
	cd pepc-b && gmake

pepc-vis:
	cd lpepcsrc && gmake
	cd pepc-b && gmake pepc-visit
debug:
	cd lpepcsrc && gmake
	cd pepc-b && gmake debug

pepce:
	cd lpepcsrc && gmake
	cd pepc-e && gmake

clean:
	cd lpepcsrc && gmake clean && cd ..
	cd pepc-b && gmake clean
	cd pepc-e && gmake clean
