#
#  Makefile for pepc
#
.PHONY : lpepc pepcb

all: lpepc pepcb 

lpepc:  
	cd lpepcsrc && make

pepcb: 
	cd lpepcsrc && make 
	cd pepc-b && make

pepc-vis:
	cd lpepcsrc && make
	cd pepc-b && make pepc-visit
debug:
	cd lpepcsrc && make
	cd pepc-b && make debug

clean:
	cd lpepcsrc && make clean && cd ..
	cd pepc-b && make clean
