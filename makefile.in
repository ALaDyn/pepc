#
#  Makefile for pepc
#
.PHONY : lpepc pepcb pepce

all: lpepc pepcb ## pepce

lpepc:  
	cd lpepcsrc && make

pepcb: 
	cd lpepcsrc && make 
	cd pepc-b && make

bgl: 
	cd lpepcsrc && make 
	cd pepc-b && make bgl

pepc-vis:
	cd lpepcsrc && make
	cd pepc-b && make pepc-visit
debug:
	cd lpepcsrc && make
	cd pepc-b && make debug

pepce:
	cd lpepcsrc && make
	cd pepc-e && make

clean:
	cd lpepcsrc && make clean && cd ..
	cd pepc-b && make clean
	cd pepc-e && make clean
