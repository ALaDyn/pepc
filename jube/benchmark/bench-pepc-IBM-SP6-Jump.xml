<!--
   Choose one of the platforms defined in the toplevel platform.xml

   IBM-SP6-Jump

    wscheme (walk_scheme) -> 0 (isend/irecv) or 1(coll)
    nt                    -> number of timesteps
    npart                 -> number of particles (ions)
    geom                  -> 1 (homogeneous); 2/3 (one/two spheres)
    writemode             -> text, binary, sionlib

-->
<bench name    = "PEPC" platform= "IBM-SP6-Jump" >

<!-- ********************************************************** -->

<benchmark name="scaling" active="1">

    <compile     cname           = "$platform"
                 version         = "new"

                 CMP_OPT         = "`{$a = '$optflags'; $a =~ s/[ ]//g; $a}`"
                 CMP_GPROF       = "$GPROF"
                 CMP_PAPI        = "$PAPI"
                 CMP_PAPI_SCOPE  = "$PAPI_SCOPE"
                 CMP_IHPCT_HWC   = "$IHPCT_HWC"
                 CMP_IHPCT_MPITR = "$IHPCT_MPITR"
                 CMP_PARAVER     = "$PARAVER"
                 CMP_SCALASCA    = "$SCALASCA"
		 CMP_WRITEMODE   = "$writemode" />

    <tasks       threadspertask = "1"   taskspernode = "32"   nodes = "1,2" />

    <params      COMMENT       = "scaling on jump"
                 PERL_CMD      = "/usr/local/bin/perl"
                 optflags      = "-O3 -qipa -qipa=inline=key2addr"

                 GPROF         = "off"

                 IHPCT_HWC     = "off"
                 IHPCT_HWC_GRP = "0"
                 IHPCT_MPITR   = "off"

		 PAPI          = "off"
		 PAPI_SCOPE    = "LOCAL"

		 SCALASCA      = "off"

		 PARAVER       = "off"

		 writemode     = "binary"

		 geom          = "1"
		 npart         = "2000000"
                 nt            = "20" 
		 wscheme       = "1"
		 fetchmult     = "3"
		 npmult        = "-30" /> 

    <prepare     cname = "PEPC" />

    <execution   iteration = "1"   
                 timelimit = "00:30:00"
                 cname     = "$platform" />

    <verify      cname="PEPC" />
    <analyse     cname="$platform" /> 

</benchmark>

<!-- ********************************************************** -->

<benchmark name="weeklyBenchmark-jump" active="0">
    <!-- version="reuse|new" -->
    <compile     cname           = "$platform"
                 version         = "new"

                 CMP_OPT         = "$optflags"
                 CMP_GPROF       = "$GPROF"
                 CMP_IHPCT_HWC   = "$IHPCT_HWC"
                 CMP_IHPCT_MPITR = "$IHPCT_MPITR"
                 CMP_SCALASCA    = "$SCALASCA"/>

    <tasks       threadspertask = "1"   taskspernode = "2,4"   nodes = "1" />

    <params      COMMENT       = "weekly benchmark on jump"
                 PERL_CMD      = "perl"
                 optflags      = "-O3"

                 GPROF         = "off"

                 IHPCT_HWC     = "off"
                 IHPCT_HWC_GRP = "0"
                 IHPCT_MPITR   = "off"

		 SCALASCA      = "off"

		 geom          = "6"
		 npart         = "25000" 
		 nt            = "5" 
		 wscheme       = "0"
		 fetchmult     = "3"
		 npmult        = "3" /> 

    <prepare     cname = "PEPC" />

    <execution   iteration = "1"   cname   = "$platform" />

    <verify      cname="PEPC" />
    <analyse     cname="$platform" /> 

</benchmark>

<!-- ********************************************************** -->

</bench>




