<bench name = "PEPC"   platform = "IBM-BGP-Jugene" >

<!-- ********************************************************** -->

<benchmark name="test_and_verify" active="1">
    <!-- version="reuse|new" -->
    <compile     cname           = "$platform"
                 version         = "new"

                 CMP_OPT         = "`{$a = '$optflags'; $a =~ s/[ ]//g; $a}`"
		 CMP_WRITEMODE   = "$writemode" />

    <tasks       threadspertask = "1"   taskspernode = "4"   nodes = "256" />

    <params      COMMENT       = "scaling test"
                 PERL_CMD      = "perl"
                 optflags      = "-O3"

		 writemode     = "binary"

		 npart         = "25000029" 
		 geom          = "2"
                 nt            = "50" 
		 wscheme       = "1"
		 cscheme       = "0"
		 csort         = "3"
		 cbuild        = "1"
		 npmult        = "-40" /> 

    <prepare     cname="PEPC" />

    <execution   iteration="1" cname="$platform" />

    <verify      cname="PEPC" />
    <analyse     cname="$platform" /> 

</benchmark>

<!-- ********************************************************** -->

</bench>
