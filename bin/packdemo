#!/bin/sh
#
#  Script to produce PEPC demo tarball 
#  - resolves symbolic links and reports file sizes
#
VERSION=$1
rm -f pepc_demos1.0.tar
cd demo_cluster
clean_pes
rm fields/*
cd ..
cd demo_crystal
clean_pes
rm fields/*
cd ..
cd demo_wake
clean_pes
rm fields/*
cd ..
cd demo_bench
clean_pes
rm fields/*
cd ..
cd demo_wire
clean_pes
rm fields/*.xyz
cd .. 
cd demo_mixed
clean_pes
cd .. 
tar vcfh - \
	demo_cluster \
	demo_crystal \
	demo_wake \
	demo_wire \
	demo_bench \
	demo_mixed \
	README.demos \
		| gzip > pepc_demos$VERSION.tar.gz
# Publish
#scp README.demos gibbon@zam581:/var/local/www/fzj/zam/pepc/.
#scp pepc_demos$VERSION.tar.gz gibbon@zam581:/var/local/www/fzj/zam/pepc/software/.

