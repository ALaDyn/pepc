#!/bin/sh

# Shell script to clean directories of
# arbitrary number of PEs

cd data
#
#echo "List of PEs:"; cat PE_list
echo

cat PE_list | while read PE
do
	if [ -d $PE ]
	then
		echo Cleaning $PE
  		rm -f $PE/*
	else
  		echo "No directory" $PE
	fi 
done
cd ..
rm -f dumps/*
rm -f log/*
rm -f fields/*
rm -fr coredir.*
rm -f *.nc mpi_* load_* run.00* energy.00* *.out
