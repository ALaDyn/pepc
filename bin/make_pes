#!/bin/sh

# Shell script to create new directories of
# PEs listed in PE_list

DATADIR=$1
cd $DATADIR

#
echo "List of PEs:"; cat PE_list
echo
cp PE_list PE_newlist
mkdir data
cp PE_list data/.
cd data 

cat PE_list | while read PE
do
	if [ ! -d $PE ]
	then
		echo "Creating $PE"
		mkdir $PE
	else
  		echo "Directory" $PE" already exists"
	fi

done
