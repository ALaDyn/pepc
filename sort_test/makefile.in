#
#  Makefile for treemp and test programs
#

MPI_DIR  = @MPI_DIR@
PREFIX = ..

#  Get machine-dependent flags

#  --------------------------------------------------------------------------------------
#  You shouldn't need to edit anything below here unless you're adding new source code
#  to add/modify compiler options:
#   - add option in ./configure (./configure --help lists all available options)
#   - or modify configure.in 
#  --------------------------------------------------------------------------------------

VISIT   = @VISIT@
DEFINES = @VISITDEF@

FC      = @MPIF90@
CC      = @MPICC@
FFLAGS  = @FFLAGS@ @FFLAGS_OS@ @OPT@
LDFLAGS = @LDFLAGS@

LIBVISIT  = @VISIT@ @LVISIT@ @XNBODY@ @VISITLIBS@
LIBNETCDF = @NETCDF@
LIBS      = $(LIBVISIT) $(LIBNETCDF)

.SUFFIXES: .f90 .F90


# -------------------------------------------------------------------------------------------

# Source files

# -------------------------------------------------------------------------------------------

VISIT.F90   =   vis_parts_nbody.F90

PPSRC.F90   =   main.F90 

MODULES.f90 =   physvars.f90 tree_utils.f90

SOURCES.f90 =	setup.f90 configure.f90 special_start.f90 open_files.f90 close_files.f90 

# -------------------------------------------------------------------------------------------

# Names of application object files derived from sources

APPOBJS = $(PPSRC.F90:.F90=.o) $(SOURCES.f90:.f90=.o) $(NCOBJS)
VISITOBJS = $(VISIT.F90:.F90=.o) 
APPMODS =  $(MODULES.f90:.f90=.o)
MODS = $(APPMODS)

default: sort-test

#  compile rules

.f90.o:   
	$(FC) -c $(FFLAGS) $(DEFINES) $<

.F90.o:   
	$(FC) -c $(FFLAGS) $(DEFINES) $<

#  explicit rules for f90 modules to avoid conflict with built-in ones
physvars.o: 
	$(FC) -c $(FFLAGS) $(DEFINES) physvars.f90

.c.o:   
	$(CC) -c $(CFLAGS) $<


# -----------------------------------------------------------------------------------------
#  targets

sort-test: $(APPOBJS) $(MODS)
	@echo "Creating application binary ../bin/sort_test ..."
	$(FC)  $(FFLAGS) $(LDFLAGS) -o ../bin/sort_test $(APPOBJS) $(MODS) $(LIBVISIT) $(LIBMPI)
	@echo "... done\n"

sort-test-visit: $(APPOBJS) $(MODS) $(VISITOBJS)
	@echo "Creating application binary ../bin/sort_test_vis ..."
	$(FC)  $(FFLAGS) $(LDFLAGS) -o ../bin/sort_test_vis $(APPOBJS) $(MODS) $(VISITOBJS) $(LIBVISIT) $(LIBMPI)
	@echo "... done\n"


debug:	$(OBJECTS)
	@echo "Loading object files using flags $(DBFLAGS)"
	$(FC) $(LDFLAGS)  $(VISITLIBS) $(DBFLAGS)  -o $@ $(OBJECTS)


rand:	 rantest.o
	$(FC) $(FFLAGS) -o rand rantest.o

clean:
	/bin/rm -f bin/*.o  *% *~ bin/key rand *.o *.pif core *.mod 

cleanbin: /bin/rm -r pepc debug core

cleancore: 	
	/bin/rm $(pepcobjs) 

cleandata: 
	/bin/rm -f fort.* *.dat *.out *.gle 

depend:
	./f90depend -u -I/usr/lpp/ppe.poe/include/thread *.f90

default: sort-test

