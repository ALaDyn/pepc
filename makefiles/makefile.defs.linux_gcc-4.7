HELP = "\
\# Makefile for gcc 4.7 (self-compiled via the following commands)\n\
\# \n\
\# svn checkout svn://gcc.gnu.org/svn/gcc/trunk workspace/gcc\n\
\# cd workspace/gcc\n\
\# ./configure --enable-bootstrap --prefix=/home/zam/m.winkel/programs/gcc/ --enable-gold=yes --enable-lto --disable-checking --enable-languages=c,c++,fortran --enable-multiarch --enable-shared --enable-threads=posix --with-gmp=/usr/local/lib --with-mpc=/home/zam/m.winkel/programs/mpc --with-mpfr=/usr/lib --without-included-gettext --with-system-zlib --with-tune=generic\n\
\# make -j 6\n\
\# make install\n\
\# export PATH=${HOME}/programs/gcc/bin:${PATH}\n\
\# export I_MPI_CC=gcc\n\
\# export I_MPI_F90=gfortran\n\
"

MACH     = linux_gcc-4.7

DEBUG    = 1
OMP      = 1

RANLIB   = ranlib

MAKE     = make

AR       = ar
ARFLAGS  = -rs

CPP      = mpicc
CPPFLAGS = -E -x c -P -C -ffreestanding
                       # ^----- this prevents errors due to nasty automatic pre-inclusion of stdc-predefs.h when using cpp for fortran code

INLINING = -fdump-ipa-inline -findirect-inlining -flto-partition=none -finline-limit=120000

FWARNINGS = -Wall -Wconversion -Warray-temporaries -Wcharacter-truncation -Wline-truncation
FFEATURES = -frecursive -fimplicit-none -ffree-line-length-none -fcoarray=none

ifeq ($(DEBUG), 1)
  FFLAGS   = -O0 -g \
    -fcheck=all -frange-check -fbacktrace -fvar-tracking \
    $(FFEATURES) \
    $(FWARNINGS)
  CFLAGS   = -O0 -g -pthread -Wall
  LDFLAGS  = -O0 -g -pthread
else
  FFLAGS   = -O3 \
    -fsign-zero -fno-protect-parens \
    $(INLINING) \
    $(FFEATURES) \
    $(FWARNINGS)
  CFLAGS   = -O3 -pthread -Wall
  LDFLAGS  = -O3 -pthread -fwhole-program $(INLINING)
  CPPFLAGS += -DNDEBUG
endif

ifeq ($(OMP), 1)
  FFLAGS   += -fopenmp
  LDFLAGS  += -fopenmp
else
endif

FCPRE    =
FC       = mpif90

CCPRE    =
CC       = mpicc

LDPRE    =
LD       = mpif90
LDLIBS   =

RM       = rm -rf

COMPILER = $(shell $(FC) --version | head -n 1)
